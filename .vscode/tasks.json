{
    "version": "2.0.0",
    "tasks": [{
        "label": "Build",
        "command": "g++",
        "args": [
            "${file}",
            
            /*
                Include file while needed
                Format:
                    "${fileDirname}\\File.cpp",
                                     ________
            */
            "-o",
            "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "-I",
            "${workspaceRoot}",
            "-g",
        ],
        "type": "shell",
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "presentation": {
            "echo": true,
            "reveal": "always",
            "focus": false,
            "panel": "shared"
        },
    }]
}